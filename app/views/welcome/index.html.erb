<div class="container px-2 py-2" id="custom-cards">
  <h1 class="pb-2 border-bottom">Welcome to Viewing Party!</h1>
  <h4>Look up movies! Make friends! Have a party!</h4><br>

  <% if current_user %>
      <%= link_to "Log out", logout_path, method: :delete%><br><br>

  <% else %>
    <%= form_with url: login_path, method: :post, local: true do |f| %>
      <%= f.label :email, 'Email:' %>
      <%= f.text_field :email %><br><br>
      <%= f.label :password, 'Password:' %>
      <%= f.password_field :password %><br><br>
      <%= f.submit 'Log In' %><br><br>
    <% end %>

    <%= link_to "Register Here", registration_path %><br><br>
  <% end %>
</div>
