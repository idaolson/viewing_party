<h1>Welcome, <%= @user.name %>!</h1>

<%= button_to "Find Top Rated Movies", movies_path, method: :get %><br>

<%= button_to "Find Upcoming Movies", movies_path, method: :get, params: {upcoming: 'upcoming'} %>


<%= form_with url: movies_path, method: :get , local: true do |f| %>
  <%= f.label :search, "Search by movie title" %>
  <%= f.text_field :search %>
  <%= f.submit "Find Movie" %>
<% end %>
<section>
<h3>Movie Search Results:</h3>
<table>
  <tr>
    <th>Movie</th>
    <th>Vote Average</th>
  </tr>

<% @movies.each do |movie| %>
<tr>
  <td><%= link_to movie.title, movie_path(movie.id) %></td>
  <td><%= movie.vote_average %></td>
  </tr>
<% end %>

</table>
</section>
