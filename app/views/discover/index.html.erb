<div class="container px-2 py-2" id="custom-cards">
  <h1 class="pb-2 border-bottom">Welcome, <%= @user.name %>!</h1>
<%= button_to "Find Top Rated Movies", movies_path, method: :get %><br>

<h4>OR</h4><br>

<%= button_to "Find Upcoming Movies", movies_path, method: :get, params: {upcoming: 'upcoming'} %><br>

<h4>OR</h4><br>

<%= form_with url: movies_path, method: :get , local: true do |f| %>
  <%= f.label :search, "Search by movie title:" %>
  <%= f.text_field :search %>
  <%= f.submit "Find Movie" %>
<% end %><br>
</div>
